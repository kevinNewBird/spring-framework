<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<!--注解开启后AnnotationConfigUtils注入默认的内部bean, 才会扫描到注解-->
	<context:component-scan base-package="com.mashibing.analysis.instanceCreation.reflection.constructor"/>
	<!--验证: org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor#determineCandidateConstructors-->
	<bean id="apple" class="com.mashibing.analysis.instanceCreation.reflection.constructor.args.Apple" scope="prototype">
		<constructor-arg value="1"/>
		<constructor-arg value="甘肃苹果"/>
	</bean>
</beans>